MAIN_TARGET = notmuch_frontend

MCFLAGS-maildir += --no-ansi-c
MCFLAGS-message_file += --no-ansi-c
MCFLAGS-popen += --no-ansi-c

# for wide-character functions
CFLAGS-curs += -D_XOPEN_SOURCE_EXTENDED

CFLAGS-screen += -D_XOPEN_SOURCE
CFLAGS-time_util += -D_GNU_SOURCE
CFLAGS-sys_util += -D_BSD_SOURCE

MLLIBS-notmuch_frontend += -lncursesw -lpanel
